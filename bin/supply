#!/usr/bin/env bash

echo "-----> Datadog Decorator (dh-io-datadog)/supply"

BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX_DIR=$4

SCRIPTS_DIR="${DHIO_DATADOG_DIR:-/home/vcap/app/dh-io-datadog}"
mkdir -p $SCRIPTS_DIR
cp $ROOT_DIR/lib/datadog.py $SCRIPTS_DIR/

# startup script goes into <deps>/<index>/profile.d
# final build pack *should* copy it into $HOME/profile.d for
# execution upon container startup

mkdir -p $DEPS_DIR/$INDEX_DIR/profile.d
cp $ROOT_DIR/lib/datadog.sh $DEPS_DIR/$INDEX_DIR/profile.d
chmod +x $DEPS_DIR/$INDEX_DIR/profile.d/datadog.sh


# TODO check why deps profile is not being handled. Quick fix for now:
mkdir -p $BUILD_DIR/.profile.d
echo "source $DEPS_DIR/$INDEX_DIR/profile.d/datadog.sh" > $BUILD_DIR/.profile.d/0-dh-io-datadog.sh
chmod +x $DEPS_DIR/$INDEX_DIR/.profile.d/0-dh-io-datadog.sh
